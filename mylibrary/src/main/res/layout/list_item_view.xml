<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
	    android:id="@+id/iv_list_item_image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true" />
	
	<TextView
        android:id="@+id/tv_list_item_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_list_item_image"
        android:layout_alignParentTop="true"
        android:text="TextView" />
	<TextView
        android:id="@+id/tv_list_item_file_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/tv_list_item_file_name"
        android:visibility="invisible" />

	<TextView
	    android:id="@+id/tv_list_item_file_type"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_list_item_file_name"
	    android:text="TextView"
	    android:visibility="invisible" />

	<TextView
	    android:id="@+id/tv_list_item_file_parent"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_list_item_file_name"
	    android:text="TextView"
	    android:visibility="invisible" />

</RelativeLayout>